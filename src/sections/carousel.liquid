{% schema %}
  {
    "name": "Carousel",
    "class": "carousel",
    "presets": [
      {
          "category": "Frontal",
          "name": "Carousel"
      }
    ],
    "blocks": [
      {
        "type": "banner",
        "name": "Banner",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Banner"
          }
        ]
      }
    ]
  }
{% endschema %}

{% stylesheet 'scss' %}
.swiper-button-next{
      background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M27%2C22L27%2C22L5%2C44l-2.1-2.1L22.8%2C22L2.9%2C2.1L5%2C0L27%2C22L27%2C22z'%20fill%3D'%23FC5B5B'%2F%3E%3C%2Fsvg%3E");
}

.swiper-button-prev{
     background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M0%2C22L22%2C0l2.1%2C2.1L4.2%2C22l19.9%2C19.9L22%2C44L0%2C22L0%2C22L0%2C22z'%20fill%3D'%23FC5B5B'%2F%3E%3C%2Fsvg%3E");
}

.swiper-pagination-bullet-active{
  background-color: #ef303b
}

#carousel{
    height: 100vh;
    min-width: 100%;
    max-width: 100%;
    .swiper-slide{
        img{
            width: 100%;
        }
    }
}
{% endstylesheet %}

{% javascript %}
var swiper = new Swiper('#carousel', {
  nextButton: '#next-carousel',
  prevButton: '#prev-carousel',
  pagination: '#pagination-carousel',
  loop: true,
  autoplay: 3000
});
{% endjavascript %}

 <div class="swiper-container" id="carousel">
    <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <img src="{{ block.settings.image | img_url: '1920x1280' }}">
          </div>
        {% endfor %}
    </div>
    <div class="swiper-pagination" id="pagination-carousel"></div>
    <div class="swiper-button-prev" id="prev-carousel"></div>
    <div class="swiper-button-next" id="next-carousel"></div>
</div>